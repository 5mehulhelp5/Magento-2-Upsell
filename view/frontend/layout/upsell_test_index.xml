<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="success_upsell"
                   before="-"
                   template="Walley_Upsell::success_upsell.phtml"

            >
                <arguments>
                    <argument name="UpsellDataProvider" xsi:type="object">
                        Walley\Upsell\ViewModel\UpsellDataProvider
                    </argument>
                    <argument name="ConfirmedPriceHelper" xsi:type="object">
                        Walley\Upsell\ViewModel\ConfirmedPriceHelper
                    </argument>
                    <argument name="GetSuccessOrder" xsi:type="object">
                        Walley\Upsell\ViewModel\GetSuccessOrder
                    </argument>
                    <argument name="IsUpsellAllowed" xsi:type="object">
                        Walley\Upsell\ViewModel\IsUpsellAllowedForOrder
                    </argument>
                </arguments>
            </block>
            <block class="Webbhuset\CollectorCheckout\Block\Success"
                   name="collectorbank_success_iframe"
                   template="Webbhuset_CollectorCheckout::success.phtml"
                   cacheable="false"
            />

            <referenceBlock name="catalog.compare.sidebar" remove="true"/>
            <referenceBlock name="wishlist_sidebar" remove="true"/>
        </referenceContainer>
    </body>
</page>
